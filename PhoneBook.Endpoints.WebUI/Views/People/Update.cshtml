@{
}
<form asp-action="Update" asp-controller="People" method="post" >
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">

        <label asp-for="FirstName"></label>
        <input type="text" name="name" asp-for="FirstName" value="@Model.FirstName" />  
        <span asp-validation-for="FirstName"></span>

    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input type="text" asp-for="LastName" class="form-control" value="@Model.LastName" maxlength="50" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control" value="@Model.Email" maxlength="150" />
        <span asp-validation-for="Email"></span>

    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" value="@Model.Address" maxlength="500" />
        <span asp-validation-for="Address"></span>

    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <img src="data:image/jpeg;base64, @Model.Image" width="250" />
    </div>

    @{ List<int> selectedTag = (List<int>)ViewBag.SelectedItem; }
    <input type="submit" class="btn btn-primary" value="Save" />
</form>


